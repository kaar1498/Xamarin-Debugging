<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Debugging.CalculateAge">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Silver" >
            <BoxView HeightRequest="50" />
            <Entry x:Name="entName" Text="Name" Margin="20"/>
            <Entry x:Name="entAge" Text="Age" Margin="20" />
            <Button BackgroundColor=" Olive" Text="Get me a partner" Clicked="Handle_Clicked" Margin="20" TextColor="White"/>
            <Button BackgroundColor="Red" Text="Give me a Runtime Error" Clicked="Handle_Clicked_Error" Margin="20" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
